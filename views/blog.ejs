<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anubhuti Bhardwaj</title>
    <link rel="stylesheet" type="text/css" href="/styles/blog.css" />
    <link rel="stylesheet" type="text/css" href="/styles/navbar_version2.css" />
    <link rel="stylesheet" type="text/css" href="/styles/footer.css" />
    <script src="https://kit.fontawesome.com/4fb9d56898.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div class="page_layer1">
        <div class="page_layer2">
            <div class="section">
                <%- include('partials/navbar')%>
                <div class="home3">
                    <h2 class="home3_heading">I guess there are never enough books</h2>

                    <div class="home3_card_container">
                        <% allblogs.forEach(blog=> { %>
                            <a href="/blog/<%=blog.data.metatitle%>" class="card_link">
                                <div class="home3_card">
                                    <div class="card_image_div">
                                        <img class="card_image" src="<%=blog.data.mainimage%>"
                                            alt="<%=blog.data.altimagetext%>">
                                    </div>
                                    <h1 class="card_title">
                                        <%=blog.data.title%>
                                    </h1>
                                    <p class="card_description">
                                        <%=blog.data.description%>
                                    </p>
                                    <div class="author_date">
                                        <span class="author">
                                            <%=blog.data.author%>
                                        </span>
                                        <span class="date">
                                            <%=blog.data.date%>
                                        </span>
                                    </div>
                                </div>
                            </a>
                            <% }) %>
                    </div>


                </div>
                <%- include('partials/footer')%>
            </div>
        </div>
    </div>
    <script src="/scripts/navbar_version2.js"></script>
</body>

</html>
